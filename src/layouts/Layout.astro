---
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="A web application, powered by AI technology to bring you the best and most diverse recipe options for every occasion and taste preference.">
		<link rel="icon" type="image/svg+xml" href="/chefhat.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-200 font-serif min-h-screen flex flex-col">
		<main>
		<slot />
		</main>
		<Footer/>
	</body>
	
</html>

